<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/Ju_Progressbar_size"
    android:layout_height="@dimen/Ju_Progressbar_size"
    android:background="@drawable/ju_progressbar_style"
    >

    <com.juhezi.juprogressbar.View.RectView
        android:id="@+id/rectView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/shadowImg"/>

    <ImageView
        android:visibility="visible"
        android:id="@+id/shadowImg"
        android:layout_width="23dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/progress_margin_top"
        android:layout_marginBottom="@dimen/progress_margin"
        android:layout_above="@+id/loadTextTv"
        android:src="@drawable/shadow_shape" />

    <TextView
        android:id="@+id/loadTextTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/load_text"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/load_text_size"
        android:paddingBottom="@dimen/progress_margin"/>

</RelativeLayout>